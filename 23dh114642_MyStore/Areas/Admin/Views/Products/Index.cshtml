@model IEnumerable<_23dh114642_MyStore.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">DANH SÁCH SẢN PHẨM</h2>


<table class="table bg-info col-md-6">
    <tr>
        <th class="bg-light ">Tên sản phẩm</th>
        <th class="bg-light ">Đơn giá</th>
        <th class="bg-light ">Hình ảnh</th>
        <th class="bg-light ">Danh mục</th>
        <th class="bg-light "></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>  @Html.DisplayFor(modelItem => item.ProductName) </td>
            <td>  @Html.DisplayFor(modelItem => item.ProductPrice) </td>
            <td>  @Html.DisplayFor(modelItem => item.ProductImage) </td>
            <td>  @Html.DisplayFor(modelItem => item.Category.CategoryName) </td>
            <td>

                @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-primary btn-sm" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary " })
</p>
