﻿
<style type="text/css">
    html {
        font-size: 14px;
        font-family: 'Franklin Gothic', 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
    }

    body {
        background-color: white;
    }

    #container {
        border: 2px solid #ff0000;
        border-radius: 10px;
    }

    header {
        background-color: #ed9e9e;
        border: 2px solid#000000;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo img {
        height: 100px;
    }

    nav ul {
        list-style-type: none;
        display: flex;
    }

        nav ul li {
            margin-left: 20px;
            font-size: 1.2rem;
        }

            nav ul li a {
                text-decoration: none;
                color: #000000;
                font-weight: bold;
            }


</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="container">
        <header>
            <div class="logo">
                <img src="https://brasol.vn/wp-content/uploads/2022/09/logo-nike-1.jpg" alt="logo" />
            </div>
            <nav>
                <ul>
                    <li><a href="~/Home/Index">Trang chủ</a></li>
                    <li><a href="~/Product/ProductDetail">Sản phẩm</a></li>
                    <li><a href="~/Cart/Index">Giỏ hàng</a></li>
                    <li><a href="~/Home/Contact">Liên hệ</a></li>
                </ul>
            </nav>
        </header>
        
    </div>
    <div class="container body-content" style="min-height: 500px; margin-top: 50px;">
    @RenderBody()
    </div>
    <div class="navbar">
        <footer class="container modal-footer " style="background-color: lightgray;">
            <div class="navbar-text">
                &copy; @DateTime.Now.Year - Tên ứng dụng
            </div>
            <h4>Contact</h4>
            <p>Tên các thành viên trong nhóm</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
